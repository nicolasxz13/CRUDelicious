@using CRUDelicious.Models
@model Dishe
<header>
    <h1>Add a new Dish!</h1>
</header>
<nav>
    <a asp-action="Index" asp-controller="Delicious">Home</a>
    <a>Add a Dish</a>
</nav>
<form asp-action="Create" asp-controller="Delicious">
    <div class="formdish">
        <div class="blocks">
            <div class="blockinputs">
                <label asp-for="Chef">Chef's Name</label>
                <input asp-for="Chef">
                <span asp-validation-for="Chef"></span>
            </div>
            <div class="blockinputs">
                <label asp-for="Name">Name of Dish</label>
                <input asp-for="Name">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="blockinputs">
                <label asp-for="Calories"># of Calories</label>
                <input asp-for="Calories">
                <span asp-validation-for="Calories"></span>
            </div>
        </div>
        <div class="blocks">
            <div class="blockinputs">
                <label asp-for="Tastiness">Tastiness</label>
                <select asp-for="Tastiness" class="select">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <span asp-validation-for="Tastiness"></span>
            </div>
        </div>
        <div class="blocks">
            <div class="blockinputs">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <div class="blockinputs">
                <button type="submit" class="btn1 btn">New Dish</button>
            </div>
        </div>
    </div>
</form>